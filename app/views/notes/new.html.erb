<h1>New Note</h1>

<div class='row'>
  <div class='span6 offset3'>
    <%= form_for(@note) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :create_by %>
        <%= f.text_field :create_by, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.collection_radio_buttons :note_type, Note.note_types, :first, :first %>

      </div>
      <div class="form-group">
        <%= f.submit 'Create Note', class: 'btn btn-large btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
