<tr>
  <td><%= note.title %></td>
  <td><%= note.body %></td>
  <td><%= note.create_by %></td>
  <td>
    <%= link_to edit_note_path(note) do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to note_path(note), method: :delete, data: {confirm: "Are you sure you want to delete note: #{note.title}?"}, class: 'delete-btn' do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
  </td>
</tr>
