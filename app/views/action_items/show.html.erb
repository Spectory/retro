<div class='action-items-tab'>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <div> <%= @action_item.title %></div>
      <% case @action_item.action_type
        when 'start_doing' %>
        <div class='glyphicon glyphicon-play'></div>
      <% when 'keep_doing' %>
        <div class='glyphicon glyphicon-forward'></div>
      <% when 'stop_doing' %>
        <div class='glyphicon glyphicon-stop'></div>
      <% end %>
    </div>

    <div class="panel-body">
      <div><%= @action_item.body %></div>
    </div>

    <div class="panel-footer">
      <div>Assigned To: <%= @action_item.assigned_to %></div>
      <%= link_to note_path(@action_item.note) do %>
        <span>View reletaed note</span>
      <% end %>
    </div>
  </div>
</div>
