<tr>
  <td><%= action_item.title %></td>
  <td><%= action_item.body %></td>
  <td><%= action_item.assigned_to %></td>
  <td>
    <%= link_to action_item_path(action_item) do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to action_item_path(action_item), method: :delete, data: {confirm: "Are you sure you want to delete action_item: #{action_item.title}?"}, class: 'delete-btn' do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
  </td>
</tr>
