<div class='login'>
  <div class='title'>
    <div>Retro</div>
  </div>

  <div class='login-form'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "LOG IN", class: 'btn btn-large btn-success' %>
        <div class='links'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
