<% if action_items.empty? %>
  <div class='empty-view-title'>No Action Items...</div>
<% end %>

<% action_items.each do |action_item| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <div> <%= action_item.title %></div>
      <% case action_item.action_type
        when 'start_doing' %>
        <div class='glyphicon glyphicon-play'></div>
      <% when 'keep_doing' %>
        <div class='glyphicon glyphicon-forward'></div>
      <% when 'stop_doing' %>
        <div class='glyphicon glyphicon-stop'></div>
      <% end %>
    </div>
    <div class="panel-body">
      <div><%= action_item.body %></div>
    </div>
    <div class="panel-footer">
      <div>
        Assigned To: <%= action_item.assigned_to %>
      </div>
      <%= link_to new_action_item_path(meeting: Meeting.last, note: action_item.note) do %>
         <div class='reviewed-btn'>
           <span class="glyphicon glyphicon-plus"></span>
           <span>Create follow up item</span>
         </div>
      <% end %>
    </div>
  </div>
<%end %>
