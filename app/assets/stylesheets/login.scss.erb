@import "custom";
@import "_colors";

.login {
  background-image: url(<%= asset_path 'bg.jpg' %>);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  padding: 10% 1%;
  min-height: 100%;
  display: flex;
  .title {
    padding-left: 3%;
    font-family: $retro-font;
    font-size: 420%;
    width: 45%;
  }
  .login-form {
    width: 55%;
    margin-top: 16px;
    padding: 0 16% 0 4%;
  }
  .actions {
    display: flex;
    justify-content: space-between;
  }
  .links {
    display: flex;
    align-items: flex-end;
  }
}
